package com.company;
import java.util.Scanner;
public class Main {

    public static void main(String[] args) {
  //3.

        Scanner in = new Scanner(System.in);
        System.out.print("Ввести целое число :");
        int a = in.nextInt();
        if (a > 0) a++;
        System.out.println(a);
        in.close();

   }


}
